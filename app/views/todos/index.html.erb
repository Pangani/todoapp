<h1>Listing all Todos</h1>

<p> <%= link_to "create todo", new_todo_path %></p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <% @todos.each do |todo| %>
        <tr>
            <td scope="row"><%= todo.name %></td>
            <td><%= todo.description %></td>
            <td><%= link_to "Edit", edit_todo_path(todo) %></td>
            <td><%= link_to "Show", todo_path(todo) %></td>
        </tr>
        <% end %>
    </tbody>
</table>